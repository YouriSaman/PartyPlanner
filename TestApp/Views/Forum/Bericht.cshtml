@using Models
@model BerichtViewModel
@{
    ViewData["Title"] = "Bericht";
}

<div class="row">
    <div class="col-md-12">
        <h1><i>"@Model.Titel"</i></h1>
        <div class="col-md-10"></div>
        <form asp-action="DeleteBericht" method="post">
            <input hidden Name="BerichtId" value="@Model.BerichtId" />
            <div class="col-md-2"><button class="btn btn-default" type="submit">Verwijder bericht!</button></div>
        </form>
    </div>
</div>

<div class="row">
    <h3><i>@Model.Gebruikersnaam</i></h3>
    <div class="well well-sm">@Model.Tekst</div>

    <h2>Reacties</h2>
    @foreach (var reactie in Model.Reacties)
    {
        <div class="well well-sm"><b>@reactie.Gebruikersnaam</b> <br />@reactie.Tekstbericht</div>
    }

    <form asp-action="MaakReactie" method="post">
        <textarea asp-for="@Model.Reactie.Tekstbericht" style="resize: vertical; min-height: 50px; height: 250px;" class="form-control" maxlength="450" placeholder="Maximaal 450 characters..."></textarea>
        <button type="submit" class="btn btn-default">Plaats reactie <input hidden Name="BerichtId" value="@Model.BerichtId" /> </button>
    </form>
</div>