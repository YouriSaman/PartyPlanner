@using Models
@model FeestViewModel
@{
    ViewData["Title"] = "Locatie & Datum";
}

<form method="post">
    <div class="row">
        <div class="col-md-6">
            <h1>Datum & Tijd</h1>

            <div class="form-group">
                <label>Begin datum:</label>
                <input asp-for="BeginDatum" type="datetime-local" class="form-control" value="@DateTime.Now" />
            </div>
            <div class="form-group">
                <label>Eind datum:</label>
                <input asp-for="EindDatum" type="datetime-local" class="form-control" value="@DateTime.Now" />
            </div>
            <input class="form-control" type="submit" value="Voeg toe!">
        </div>
        <div class="col-md-6">
            <h1>Locatie</h1>
        </div>
    </div>
    <br />
    <div class="row">

        <button style="float: right" type="submit">Next</button>

    </div>
</form>
