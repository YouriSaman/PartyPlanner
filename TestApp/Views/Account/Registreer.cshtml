@using Models
@model AccountViewModel
@{
    ViewData["Title"] = "Registreer";
}

<div class="row">
    <h1>Maak hier een nieuw account aan</h1>
    <div class="col-md-4">
        <form asp-action="Registreer" asp-controller="Account" method="post">
            <div class="form-group">
                <div class="alert-danger" role="alert">@ViewData["InvalidRegister"]</div>
                <label>Naam:</label>
                <input asp-for="Naam" class="form-control" type="text" />
                <label>Gebruikersnaam:</label>
                <input asp-for="Gebruikersnaam" class="form-control" type="text" />
                <label>Wachtwoord:</label>
                <input asp-for="Wachtwoord" class="form-control" type="password" />
                <label>E-mail:</label>
                <input asp-for="Email" class="form-control" type="email" />
                <label>Straatnaam:</label>
                <input asp-for="Straat" class="form-control" type="text" />
                <label>Huisnummer:</label>
                <input asp-for="Huisnummer" class="form-control" type="text" />
                <label>Postcode:</label>
                <input asp-for="Postcode" class="form-control" type="text" />
                <label>Woonplaats:</label>
                <input asp-for="Woonplaats" class="form-control" type="text" />
                <br />
                <input class="form-control" type="submit" value="Registreer!" />

            </div>
        </form>
    </div>
</div>
