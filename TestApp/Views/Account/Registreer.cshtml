@using Models
@model AccountViewModel
@{
    ViewData["Title"] = "Registreer";
}

<div class="row">
    <h1>Maak hier een nieuw account aan</h1>
    <div class="col-md-4">
        <form asp-action="Registreer" asp-controller="Account" method="post">
            <div class="form-group">
                @if (ViewData["InvalidRegister"] != null)
                {
                    <div class="alert alert-danger" role="alert">@ViewData["InvalidRegister"]</div>
                }
                <label>Naam:</label>
                <input required asp-for="Naam" class="form-control" type="text"/>
                <label>Gebruikersnaam:</label>
                <input required asp-for="Gebruikersnaam" class="form-control" type="text"/>
                <label>Wachtwoord:</label>
                <input required asp-for="Wachtwoord" class="form-control" type="password"/>
                <label>E-mail:</label>
                <input required asp-for="Email" class="form-control" type="email"/>
                <label>Straatnaam:</label>
                <input required asp-for="Straat" class="form-control" type="text"/>
                <label>Huisnummer:</label>
                <input required asp-for="Huisnummer" class="form-control" type="text"/>
                <label>Postcode:</label>
                <input required asp-for="Postcode" class="form-control" type="text"/>
                <label>Woonplaats:</label>
                <input required asp-for="Woonplaats" class="form-control" type="text"/>
                <br/>
                <button class="btn btn-default btn-right" type="submit">Registreer!</button>

            </div>
        </form>
    </div>
</div>
