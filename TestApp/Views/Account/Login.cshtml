@model AccountViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-4">
        <h1>Login</h1>
        <form asp-action="Login" asp-controller="Account" method="post">
            @if (@ViewData["InvalidLogin"] != null)
            {
                <div class="alert alert-danger" role="alert">@ViewData["InvalidLogin"]</div>
            }
            <div class="form-group">
                <label>Gebruikersnaam:</label>
                <input asp-for="Gebruikersnaam" class="form-control" type="text" required/>
                <label>Wachtwoord:</label>
                <input asp-for="Wachtwoord" class="form-control" type="password" required/>
                <br/>
                <button class="btn btn-default btn-right" type="submit">Log in!</button>
            </div>
        </form>
    </div>
</div>
