@using Models
@model AccountViewModel
@{
    ViewData["Title"] = "Profiel";
}

<h1>Mijn profiel</h1>


    <div class="row">
        <div class="col-md-12">
            <div class="col-md-5">
                <form asp-action="DeleteAccount" method="post">
                    <h3>Account gegevens</h3>
                    <label>Naam:</label>
                    <p>@Model.Gebruiker.Naam</p>
                    <label>Gebruikersnaam:</label>
                    <p>@Model.Gebruiker.Gebruikersnaam</p>
                    <label>Wachtwoord:</label>
                    <p>*********</p>
                    <label>E-mail:</label>
                    <p>@Model.Gebruiker.Email</p>
                    <label>Straatnaam:</label>
                    <p>@Model.Gebruiker.Straat</p>
                    <label>Huisnummer:</label>
                    <p>@Model.Gebruiker.Huisnummer</p>
                    <label>Postcode:</label>
                    <p>@Model.Gebruiker.Postcode</p>
                    <label>Woonplaats:</label>
                    <p>@Model.Gebruiker.Woonplaats</p>

                    <a class="btn btn-default" asp-action="VeranderAccount">Verander accountgegevens</a>
                    <input hidden Name="GebruikerId" value="@Model.Gebruiker.GebruikerId"/>
                    <button class="btn btn-default btn-right" type="submit">Verwijder account</button>
                </form>
                
            </div>
            <div class="col-md-7">
                
                <h3>Alle feesten van @Model.Naam</h3>
                <div class="list-group">
                    @foreach (var feest in @Model.feestViewModel.Feesten)
                    {
                        <form asp-controller="Feest" asp-action="View" method="get">
                        <button type="submit" class="list-group-item"><b>@feest.FeestTitel</b>: @feest.BeginDatum.ToString("f") - @feest.EindDatum.ToString("f") <input hidden Name="FeestId" value="@feest.FeestId"/> </button>
                        </form>
                    }
                </div>
                
            </div>
        </div>
    </div>

